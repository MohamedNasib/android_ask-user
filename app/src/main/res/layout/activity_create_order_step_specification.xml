<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.createOrderSteps.createOrderStepSpecification.CreateOrderStepSpecificationActivity">
    <FrameLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bg_shape" />
    </FrameLayout>
    <include
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_32dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/viewToolBar"
        layout="@layout/my_toolbar_steps" />
    <include
        layout="@layout/z_status_common"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewToolBar" />
    <FrameLayout
        android:id="@+id/viewContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="@dimen/_24dp"
                android:paddingEnd="@dimen/_24dp"
                android:paddingTop="@dimen/_16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/_18sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorWhite"
                    android:text="@string/select_specification_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/_16dp"
                        android:id="@+id/tilAdvertTitle"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        android:hint="@string/advert_title">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieAdvertTitle"
                            android:inputType="textPersonName"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAdvertDesc"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        android:hint="@string/advert_desc">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieAdvertDesc"
                            android:minLines="3"
                            android:maxLines="3"
                            android:gravity="start"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAdvertLocation"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        app:startIconDrawable="@drawable/ic_distance"
                        android:hint="@string/advert_location">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieAdvertLocation"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:gravity="start"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAdvertPrice"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        app:startIconDrawable="@drawable/ic_money"
                        android:hint="@string/advert_price">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieAdvertPrice"
                            android:maxLines="1"
                            android:gravity="start"
                            android:inputType="number"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="@dimen/_2dp"
                            android:layout_marginEnd="@dimen/_2dp"
                            android:id="@+id/tilAdvertSide"
                            style="@style/Widget.AppTheme.TextInputLayoutList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:helperText="  "
                            app:endIconDrawable="@drawable/ic_arrow_down"
                            app:endIconTint="@color/colorTextPrimary"
                            app:endIconMode="custom"
                            app:startIconDrawable="@drawable/ic_side"
                            android:hint="@string/advert_side">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tieAdvertSide"
                                android:maxLines="1"
                                android:gravity="start"
                                android:clickable="true"
                                android:focusable="false"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="@dimen/_2dp"
                            android:layout_marginEnd="@dimen/_2dp"
                            android:id="@+id/tilAdvertBlock"
                            style="@style/Widget.AppTheme.TextInputLayoutList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:helperText="  "
                            app:endIconDrawable="@drawable/ic_arrow_down"
                            app:endIconTint="@color/colorTextPrimary"
                            app:endIconMode="custom"
                            app:startIconDrawable="@drawable/ic_block"
                            android:hint="@string/advert_block">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tieAdvertBlock"
                                android:maxLines="1"
                                android:gravity="start"
                                android:clickable="true"
                                android:focusable="false"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSpecification"
                        tools:itemCount="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnConfirmSpecification"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/confirm_specification"
                        style="@style/btnPrimary"
                        android:layout_margin="@dimen/_32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>