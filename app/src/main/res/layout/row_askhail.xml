<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_16dp"
    android:layout_marginEnd="22dp"
    android:layout_marginStart="22dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/custom_view_ask"
         android:layout_marginTop="@dimen/_14sp"
         app:cardCornerRadius="10dp"
         >
         <androidx.cardview.widget.CardView
                     android:visibility="gone"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_marginTop="@dimen/_16dp"
                     android:layout_marginLeft="13dp"
                     app:cardCornerRadius="5dp">
                     <ImageView
                         android:visibility="gone"
                         android:id="@+id/ivAskImage"
                         android:scaleType="centerCrop"
                         android:src="@drawable/test_image"
                         android:layout_width="80dp"
                         android:layout_height="80dp"/>
                 </androidx.cardview.widget.CardView>

         <TextView
             android:id="@+id/tvAskerName"
             android:textStyle="bold"
             android:textSize="13sp"
             android:textColor="@color/blue"
             android:layout_alignParentRight="true"
             android:layout_marginTop="29dp"
             android:layout_marginRight="17dp"
             tools:text="...نايف يقول"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tvAskDate"
             android:textSize="@dimen/_12sp"
             android:textColor="@color/colorTextGreyDark2"
             tools:text="...asd يقول"
             android:layout_marginTop="29dp"
             android:layout_marginStart="8dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:textAlignment="viewStart"
             android:id="@+id/tvAskTitle"
             android:layout_marginTop="16dp"
             android:textColor="@color/blue"
             android:layout_below="@+id/tvAskerName"
             android:textSize="15sp"
             android:textStyle="bold"
             tools:text="كيف ضمانات المرافق؟ السباكة والكهرباء"
             android:layout_width="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tvAskReplay"
             android:textColor="@color/colorInputUnderLine"
             android:textSize="@dimen/_14sp"
             android:textStyle="bold"
             android:text="أقل من 100,000"
             android:layout_below="@+id/tvAskTitle"
             android:layout_marginRight="@dimen/_16dp"
             android:layout_marginTop="10dp"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_marginBottom="17dp"
             android:layout_height="wrap_content"/>

                 <View
                     android:background="@color/colorLine"
                     android:id="@+id/viewReplay"
                     android:layout_marginTop="@dimen/_4dp"
                     android:layout_marginBottom="@dimen/_4dp"
                     android:orientation="horizontal"
                     android:visibility="gone"
                     android:layout_width="match_parent"
                     android:layout_height="1dp"/>

                     <TextView
                         android:padding="@dimen/_8dp"
                         android:background="#E1F8FD"
                         android:textColor="@color/colorTextPrimary"
                         android:textSize="@dimen/_12sp"
                         android:id="@+id/tvIsNew"
                         android:text="@string/new_item"
                         android:visibility="invisible"
                         android:layout_alignParentRight="true"

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>

     </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_16dp"
        android:src="@drawable/ic_ask2"/>
</RelativeLayout>

