<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginBottom="@dimen/_4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/opacity_boarder"
            android:layout_below="@+id/chat"
            >
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMessageImage"
            android:scaleType="centerCrop"
            android:src="@drawable/test_image"
            android:layout_width="80dp"
            android:visibility="gone"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:id="@+id/chat"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tvMessageTitle"
                android:layout_alignParentStart="true"
                android:textColor="@color/black_chat"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:maxLines="1"
                android:text="احمد زيدان"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_4dp"
                android:id="@+id/tvMessageSubTitle"
                 android:textColor="@color/white_gray"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_below="@+id/tvMessageTitle"
                android:layout_alignParentStart="true"
                android:maxLines="2"
                android:text="تفاصيل سعر الإيجار"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMessageDate"
                android:textColor="@color/white_gray"
                android:textSize="@dimen/_12sp"
                android:maxLines="1"
                android:text="9:32 Am"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tvMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>
        <TextView

            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:text="12"
            android:maxLength="2"
            android:background="@drawable/draw_round"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            android:id="@+id/tvUnReadCount"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</LinearLayout>