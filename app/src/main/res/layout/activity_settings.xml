<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".features.settings.SettingsActivity">
    <include android:id="@+id/viewToolBar" layout="@layout/my_toolbar_elevation" />
    <include
        layout="@layout/z_status_common"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <FrameLayout
        android:id="@+id/viewContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/viewNotificationControl"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/_12dp"
                    android:layout_margin="@dimen/_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/colorBlack"
                        android:text="@string/_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:text="@string/allnotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                        <ImageButton
                            android:id="@+id/swAllNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_emp_cir"
                            android:background="@color/colorWhite"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/_12dp"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp"
                            android:text="@string/newcomment"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                        <ImageButton
                            android:id="@+id/swNewComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_emp_cir"
                            android:background="@color/colorWhite"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/_12dp"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp"
                            android:text="@string/special_msg"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                        <ImageButton
                            android:id="@+id/swSpecialMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_emp_cir"
                            android:background="@color/colorWhite"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/_12dp"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp"
                            android:text="@string/replay_asks"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                        <ImageButton
                            android:id="@+id/swReplayAsks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_emp_cir"
                            android:background="@color/colorWhite"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/_12dp"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:text="@string/saveadsuser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                        <ImageButton
                            android:id="@+id/swSaveAds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_emp_cir"
                            android:background="@color/colorWhite"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewChangeLanguage"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sp"
                        android:textColor="@color/colorBlack"
                        android:text="@string/thelanguage"
                        android:fontFamily="@font/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCurrentLanguage"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sp"
                            android:text="@string/languagecurrentarabic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/_8dp"
                            android:id="@+id/tvSwitchToLanguage"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorInputUnderLine"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sp"
                            android:text="@string/switch_language_english"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>