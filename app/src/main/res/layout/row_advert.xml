<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_margin="@dimen/_2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/test_image"
                tools:layout_editor_absoluteX="-130dp"
                tools:layout_editor_absoluteY="-192dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpAdvertSlider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorBlack" />
                <me.relex.circleindicator.CircleIndicator3
                    android:visibility="gone"
                    android:elevation="@dimen/_8dp"
                    android:id="@+id/indicatorAdvert"
                    app:ci_drawable_unselected="@drawable/ic_indicator_off"
                    app:ci_drawable="@drawable/ic_indicator_on"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_8dp" />

            </FrameLayout>
            <TextView
                android:id="@+id/tvDistance"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_12dp"
                android:padding="@dimen/_8dp"
                android:drawableStart="@drawable/ic_distance_white"
                android:drawablePadding="@dimen/_8dp"
                android:background="@drawable/shape_location"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/whiteBackGround"
                android:text="@string/special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvSpecial"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_8dp"
                android:padding="@dimen/_8dp"
                android:drawableStart="@drawable/ic_home_special"
                android:drawablePadding="@dimen/_8dp"
                android:background="@color/colorSpecial"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <FrameLayout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:visibility="gone"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_16dp"
                            android:paddingEnd="@dimen/_16dp"
                            android:paddingTop="@dimen/_4dp"
                            android:paddingBottom="@dimen/_4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAlignment="viewStart"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sp"
                                android:textColor="@color/colorWhite"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/ivIsFav"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/ic_fav_off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginEnd="40dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tvPrice"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sp"
                                android:textColor="@color/colorWhite"
                                android:text="32,658 sar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_marginStart="@dimen/_4dp"
                                android:id="@+id/viewBusinessSection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvTitle"
                                    android:layout_marginEnd="@dimen/_8dp"
                                    android:textColor="@color/white_blue"
                                    android:layout_marginTop="@dimen/_8dp"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_24sp"
                                    android:text="فندق الاحلام"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:id="@+id/tvAvailable"
                                    android:layout_marginEnd="@dimen/_8dp"
                                    android:layout_marginTop="@dimen/_4dp"
                                    android:textColor="@color/textGreen"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12sp"
                                    android:text="متوفر"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>

                                <ImageView
                                    android:visibility="gone"
                                    android:src="@drawable/ic_star_white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:visibility="gone"
                                    android:layout_marginStart="@dimen/_4dp"
                                    android:id="@+id/tvRates"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12sp"
                                    android:text="4.5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_distance_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_4dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:text="48 km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_8dp"
                                android:src="@drawable/ic_views_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_4dp"
                                android:id="@+id/tvViews"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:text="488"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/save_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_4dp"
                        />
                </RelativeLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>