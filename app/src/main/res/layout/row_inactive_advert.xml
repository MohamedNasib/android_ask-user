<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_8dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/test_image"
        tools:layout_editor_absoluteX="-130dp"
        tools:layout_editor_absoluteY="-192dp" />

    <TextView

        android:id="@+id/tvSpecial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        android:drawableStart="@drawable/ic_home_special"
        android:drawablePadding="@dimen/_8dp"
        android:background="@color/colorSpecial"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:text="@string/special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/draw_blur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_16dp"
                android:paddingTop="@dimen/_4dp"
                android:paddingBottom="@dimen/_4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTitle"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/colorWhite"
                    android:text="للبيع شاليه بحائل حي الشفاء"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/ivIsFav"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_fav_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_12dp"
                android:paddingEnd="@dimen/_12dp"
                android:paddingBottom="@dimen/_8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvPrice"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/colorWhite"
                    android:text="32,658 sar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <LinearLayout

                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:id="@+id/viewBusinessSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAvailable"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:textColor="@color/textGreen"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sp"
                        android:text="متوفر"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/ic_star_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="@dimen/_4dp"
                        android:id="@+id/tvRates"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:text="4.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <ImageView
                    android:src="@drawable/ic_distance_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="@dimen/_4dp"
                    android:id="@+id/tvDistance"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:text="48 km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginStart="@dimen/_8dp"
                    android:src="@drawable/ic_views_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="@dimen/_4dp"

                    android:id="@+id/tvViews"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:text="488"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:alpha=".5"
            android:background="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorWhite"
            android:text="@string/inactive"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>