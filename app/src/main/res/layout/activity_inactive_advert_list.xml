<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBar"
    tools:context=".features.inactiveAdvertList.InactiveAdvertListActivity">
    <include
        android:id="@+id/viewIncludedToolbar"
        layout="@layout/my_toolbar_elevation"/>
    <include
        layout="@layout/z_status_common"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewIncludedToolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <FrameLayout
        android:id="@+id/viewContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewIncludedToolbar"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInactiveAdverts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnActiveAll"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_16dp"
            android:layout_height="wrap_content"
            android:text="@string/active_all"
            style="@style/btnPrimary"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>