<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/colorStatusBar"
        android:elevation="@dimen/_1dp"
        android:layout_margin="@dimen/_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="@dimen/_16dp"
                    android:id="@+id/tvJobName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:layout_height="wrap_content"
                    android:text="اسم العقد المتاح للتنزيل"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:visibility="invisible"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="invisible"
                        android:textColor="@color/colorTextPrimary"
                        android:alpha=".5"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sp"
                        android:text="@string/hail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/ic_pin"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:id="@+id/tvJobDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:text="تاريخ الإضافة : 24 سبتمبر 2020"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/_16sp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:background="@drawable/ic_shape_btn"
            android:layout_gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sp"
                android:text="@string/register_now"/>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>