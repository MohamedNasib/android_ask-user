<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBar"
    tools:context=".features.typePhone.TypePhoneActivity">
    <include
        android:id="@+id/viewIncludedToolbar"
        layout="@layout/my_toolbar_simple"/>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewIncludedToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/view"
        android:layout_margin="@dimen/_12dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:textSize="@dimen/_24sp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:text="@string/reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvStepper"
                android:layout_marginStart="@dimen/_12dp"
                android:textColor="@color/colorInputUnderLine"
                android:textSize="@dimen/_24sp"
                android:textStyle="bold"
                android:text="(1/3)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_marginTop="@dimen/_8dp"
            android:textStyle="normal"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_14sp"
            android:text="@string/type_your_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_16dp"
            android:id="@+id/tilPhone"
            style="@style/Widget.AppTheme.TextInputLayoutList"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/ic_phone"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:endIconDrawable="@drawable/ic_prefix_phone"
            app:endIconMode="custom"
            app:helperText="  "
            android:hint="@string/phone_number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiePhone"
                android:inputType="phone"
                style="@style/TextInputEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_weight="1"
            android:layout_width="@dimen/_1dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_16dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            style="@style/btnPrimary"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>