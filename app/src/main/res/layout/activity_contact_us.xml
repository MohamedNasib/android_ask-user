<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".features.contactUs.ContactUsActivity">
    <include android:id="@+id/viewToolBar" layout="@layout/my_toolbar_elevation" />
    <include
        layout="@layout/z_status_common"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewToolBar" />
    <FrameLayout
        android:id="@+id/viewContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/_12dp"
                        android:layout_margin="@dimen/_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="normal"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorTextPrimary"
                            android:text="@string/call_us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_8dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/_16sp"
                                android:textStyle="normal"
                                android:textColor="@color/colorTextPrimary"
                                android:text="51234567890"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="1dp"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="@dimen/_4dp"
                                android:src="@drawable/ic_adverter_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="@dimen/_16dp"
                            android:textStyle="normal"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorTextPrimary"
                            android:text="@string/social_media_accounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/ic_twitter_full"
                                    android:layout_width="@dimen/_24dp"
                                    android:layout_height="@dimen/_24dp"/>
                                <TextView
                                    android:id="@+id/tvTwitter"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginStart="@dimen/_4dp"
                                    android:textSize="@dimen/_18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="AskHail6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/ic_snap_full"
                                    android:layout_width="@dimen/_24dp"
                                    android:layout_height="@dimen/_24dp"/>
                                <TextView
                                    android:id="@+id/tvSnap"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginStart="@dimen/_4dp"
                                    android:textSize="@dimen/_18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="AskHail6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/ic_insta_full"
                                    android:layout_width="@dimen/_24dp"
                                    android:layout_height="@dimen/_24dp"/>
                                <TextView
                                    android:id="@+id/tvInstgram"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginStart="@dimen/_4dp"
                                    android:textSize="@dimen/_18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="AskHail6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/ic_whatsapp"
                                    android:layout_width="@dimen/_24dp"
                                    android:layout_height="@dimen/_24dp"/>
                                <TextView
                                    android:id="@+id/tvWhats"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginStart="@dimen/_4dp"
                                    android:textSize="@dimen/_18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"
                                    android:text="AskHail6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_8dp"
                        android:padding="@dimen/_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:textColor="@color/colorTextPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14sp"
                            android:text="@string/send_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_4dp"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/_14sp"
                            android:text="@string/send_msg_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_telephone_large"
                                    android:layout_marginRight="@dimen/_16dp"
                                    />
                                <TextView
                                    android:id="@+id/thPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/number"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_18sp"
                                    android:layout_marginRight="@dimen/_16dp"
                                    />

                                <TextView
                                    android:id="@+id/ivCall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/callus"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_18sp"
                                    android:layout_marginRight="@dimen/_16dp"
                                    />
                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fullname"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_12dp"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilFullName"
                            style="@style/Widget.AppTheme.TextInputLayoutList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tieFullName"
                                style="@style/TextInputEditTextStyle"
                                android:background="@drawable/textinput_edit_text_style_background"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_email"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_16dp"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilEmail"
                            style="@style/Widget.AppTheme.TextInputLayoutList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tieEmail"
                                style="@style/TextInputEditTextStyle"
                                android:background="@drawable/textinput_edit_text_style_background"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_16dp"
                            />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilPhone"
                            style="@style/Widget.AppTheme.TextInputLayoutList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tiePhone"
                                android:inputType="phone"
                                style="@style/TextInputEditTextStyle"
                                android:background="@drawable/textinput_edit_text_style_background"
                                android:layout_marginTop="@dimen/_16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_messages"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_16dp"
                            />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilMessage"
                            style="@style/Widget.AppTheme.TextInputLayoutList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tieMessage"
                                android:minLines="4"
                                android:maxLines="4"
                                android:gravity="start"
                                style="@style/TextInputEditTextStyle"
                                android:background="@drawable/textinput_edit_text_style_background"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <Button
                            android:layout_gravity="center"
                            android:id="@+id/btnCont"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/send"
                            style="@style/btnPrimary"
                            android:layout_marginTop="@dimen/_16dp"
                            android:layout_marginBottom="@dimen/_16dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginEnd="48dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/socialmediaaccounts"
                            android:gravity="center"
                            android:textSize="@dimen/_18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="@dimen/_32dp"
                            android:layout_marginBottom="@dimen/_16dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <ImageView
                                android:id="@+id/viewSnap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_snapchat_large"
                                android:layout_marginLeft="@dimen/_12dp"/>
                            <ImageView
                                android:id="@+id/viewInstgram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_instagram_large"
                                android:layout_marginLeft="@dimen/_12dp"
                                />
                            <ImageView
                                android:id="@+id/viewTwitter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_x_large"
                                android:layout_marginLeft="@dimen/_12dp"
                                />
                            <ImageView
                                android:id="@+id/viewTikTok"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_tiktok_large"
                                android:layout_marginLeft="@dimen/_12dp"
                                />
                            <ImageView
                                android:id="@+id/viewWhatsApp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_whats_large"
                                android:layout_marginLeft="@dimen/_12dp"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/askhail"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sp"
                            android:layout_marginTop="@dimen/_4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>