<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBar"
    tools:context=".features.payPackage.payPackageStepSInfoBank.PayPackageStepSInfoBankActivity">

    <include
        android:id="@+id/include"
        layout="@layout/my_toolbar_no_elevation" />

    <FrameLayout
        android:id="@+id/viewPackageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tvPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:text="الباقة المتكاملة"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:src="@drawable/ic_star" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPackageDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_4dp"
                android:text="لمكاتب التسويق والإستثمارات"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPackageCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="25"
                            android:textColor="@color/colorInputUnderLine"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/adverts"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="الإعلانات"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="@dimen/_1dp"
                    android:layout_height="match_parent"
                    android:alpha=".5"
                    android:background="@color/colorTextPrimary" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPackagePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="2500"
                            android:textColor="@color/colorInputUnderLine"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/price"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/sar"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="@dimen/_1dp"
                    android:layout_height="match_parent"
                    android:alpha=".5"
                    android:background="@color/colorTextPrimary" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPackagePeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="2500"
                            android:textColor="@color/colorInputUnderLine"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/period"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/day"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <include
        layout="@layout/z_status_common"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPackageDetails"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <FrameLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPackageDetails"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                 <LinearLayout
                     android:padding="@dimen/_16dp"
                     android:background="@color/colorWhite"
                     android:layout_marginTop="@dimen/_8dp"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_height="wrap_content">

                     <FrameLayout
                         android:background="@drawable/draw_rec_border"
                         android:layout_width="120dp"
                         android:layout_height="80dp">
                         <ImageView
                             android:id="@+id/ivBankImage"
                             android:layout_margin="@dimen/_4dp"
                             android:scaleType="centerCrop"
                             android:src="@drawable/test_image"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                     </FrameLayout>
                   <LinearLayout
                       android:layout_marginStart="@dimen/_16dp"
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:textSize="@dimen/_12sp"
                               android:alpha=".5"
                               android:textColor="@color/colorTextPrimary"
                               android:text="@string/mostafeed"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                           <LinearLayout
                               android:gravity="center"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/tvBeneficiaryName"
                                   android:textStyle="bold"
                                   android:textSize="@dimen/_12sp"
                                   android:textColor="@color/colorTextPrimary"
                                   android:text="@string/beneficiary_name"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                               <View
                                   android:layout_weight="1"
                                   android:layout_width="0dp"
                                   android:layout_height="1dp"/>
                               <ImageView
                                   android:id="@+id/ivBeneficiaryNameCopy"
                                   android:src="@drawable/ic_copy"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                           </LinearLayout>
                       </LinearLayout>


                       <LinearLayout
                           android:layout_marginTop="@dimen/_4dp"
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:textSize="@dimen/_12sp"
                               android:alpha=".5"
                               android:textColor="@color/colorTextPrimary"
                               android:text="@string/account_number"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                           <LinearLayout
                               android:gravity="center"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/tvAccountNumber"
                                   android:textStyle="bold"
                                   android:textSize="@dimen/_12sp"
                                   android:textColor="@color/colorTextPrimary"
                                   android:text="@string/beneficiary_name"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                               <View
                                   android:layout_weight="1"
                                   android:layout_width="0dp"
                                   android:layout_height="1dp"/>
                               <ImageView
                                   android:id="@+id/ivAccountNumberCopy"
                                   android:src="@drawable/ic_copy"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                           </LinearLayout>
                       </LinearLayout>


                       <LinearLayout
                           android:layout_marginTop="@dimen/_4dp"
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:textSize="@dimen/_12sp"
                               android:alpha=".5"
                               android:textColor="@color/colorTextPrimary"
                               android:text="@string/iPan"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                           <LinearLayout
                               android:gravity="center"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/tvIPan"
                                   android:textStyle="bold"
                                   android:textSize="@dimen/_12sp"
                                   android:textColor="@color/colorTextPrimary"
                                   android:text="@string/beneficiary_name"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                               <View
                                   android:layout_weight="1"
                                   android:layout_width="0dp"
                                   android:layout_height="1dp"/>
                               <ImageView
                                   android:id="@+id/ivIPanCopy"
                                   android:src="@drawable/ic_copy"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                           </LinearLayout>
                       </LinearLayout>


                   </LinearLayout>
                 </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="normal"
                        android:textSize="@dimen/_16sp"
                        android:text="@string/bank_transter_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/_16dp"
                        android:id="@+id/tilTransferName"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        app:startIconDrawable="@drawable/ic_transfer_name"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        android:hint="@string/transfer_name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieTransferName"
                            android:inputType="textPersonName"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilBank"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        app:startIconDrawable="@drawable/ic_transfer_bank"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        android:hint="@string/transfer_bank">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieBank"
                            android:inputType="textPersonName"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTransferAccount"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:helperText="  "
                        android:hint="@string/transfer_account">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tieTransferAccount"
                            android:inputType="number"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnConfirmTransfer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/confirm_transfer"
                        style="@style/btnPrimary"
                        android:layout_margin="@dimen/_32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>