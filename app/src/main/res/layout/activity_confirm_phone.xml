<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBar"
    tools:context=".features.confimPhone.ConfirmPhoneActivity">
    <include
        android:id="@+id/viewIncludedToolbar"
        layout="@layout/my_toolbar_simple"/>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewIncludedToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/view"
        android:layout_margin="@dimen/_12dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:textSize="@dimen/_24sp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:text="@string/reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvStepper"
                android:layout_marginStart="@dimen/_12dp"
                android:textColor="@color/colorInputUnderLine"
                android:textSize="@dimen/_24sp"
                android:textStyle="bold"
                android:text="(2/3)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_marginTop="@dimen/_8dp"
            android:textStyle="normal"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_14sp"
            android:text="@string/confirm_code_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layoutDirection="ltr"
            android:padding="@dimen/_2dp"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:elevation="@dimen/_2dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:padding="@dimen/_8dp"
                android:gravity="center"
                android:background="@drawable/draw_rec_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etN1"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="@dimen/_16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:elevation="@dimen/_2dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:padding="@dimen/_8dp"
                android:gravity="center"
                android:background="@drawable/draw_rec_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etN2"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:inputType="number"
                    android:padding="@dimen/_16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:elevation="@dimen/_2dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:padding="@dimen/_8dp"
                android:gravity="center"
                android:background="@drawable/draw_rec_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etN3"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="@dimen/_16dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:elevation="@dimen/_2dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:padding="@dimen/_8dp"
                android:gravity="center"
                android:background="@drawable/draw_rec_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etN4"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:padding="@dimen/_16dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_weight="1"
            android:layout_width="@dimen/_1dp"
            android:layout_height="0dp"/>
        <TextView
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:text="@string/not_get_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/viewResend"
                android:clickable="false"
                android:padding="@dimen/_8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/can_another_within"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:text="25 ثانية"
                    android:textColor="@color/colorInputError"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_16dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            style="@style/btnPrimary"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>